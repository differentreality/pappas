%h1 Users

%table.table.table-bordered
  %thead
    %tr
      %th Surname
      %th Name
      %th Father
      %th Telephone
      %th Mobile
      %th Dob
      %th Email
      %th Address
      %th Activity
      %th{ colspan: '3' }

  %tbody
    - @users.each do |user|
      %tr
        %td= user.surname
        %td= user.name
        %td= user.father
        %td= user.telephone
        %td= user.mobile
        %td= user.dob
        %td= user.email
        %td= user.address
        %td= user.activity
        %td= link_to 'Show', user
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }
%br

= link_to 'New User', new_user_path, :class => "btn btn-success"
