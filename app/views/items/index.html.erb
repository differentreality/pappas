<p id="notice"><%= notice %></p>

<h1>Items</h1>

<table>
  <thead>
    <tr>
      <th>Cat</th>
      <th>Subcat</th>
      <th>Name</th>
      <th>Desc</th>
      <th>Stock</th>
      <th>Code</th>
      <th>Barcode</th>
      <th>Price</th>
      <th>Vat</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.cat %></td>
        <td><%= item.subcat %></td>
        <td><%= item.name %></td>
        <td><%= item.desc %></td>
        <td><%= item.stock %></td>
        <td><%= item.code %></td>
        <td><%= item.barcode %></td>
        <td><%= item.price %></td>
        <td><%= item.vat %></td>
        <td><%= item.user_id %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Item', new_item_path %>
