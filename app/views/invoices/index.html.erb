<p id="notice"><%= notice %></p>

<h1>Invoices</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Photo</th>
      <th>Value</th>
      <th>Vat</th>
      <th>Payable</th>
      <th>User</th>
      <th>Category</th>
      <th>Order</th>
      <th>Paid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.date %></td>
        <td><%= invoice.photo %></td>
        <td><%= invoice.value %></td>
        <td><%= invoice.vat %></td>
        <td><%= invoice.payable %></td>
        <td><%= invoice.user_id %></td>
        <td><%= invoice.category %></td>
        <td><%= invoice.order %></td>
        <td><%= invoice.paid %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

